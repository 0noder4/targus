FROM node:20-alpine AS base
RUN apk add --no-cache g++ make py3-pip libc6-compat
WORKDIR /app
COPY package.json package-lock.json ./

ARG NODE_ENV
ENV NODE_ENV "$NODE_ENV"

FROM base AS production
ARG NEXT_PUBLIC_BACKEND_PROTOCOL
ARG NEXT_PUBLIC_BACKEND_HOST
ARG NEXT_PUBLIC_BACKEND_HOST_BROWSER
ARG NEXT_PUBLIC_BACKEND_PORT
ARG BACKEND_API_TOKEN
ARG GA_ID
ARG GTM_ID
ENV NEXT_PUBLIC_BACKEND_PROTOCOL "$NEXT_PUBLIC_BACKEND_PROTOCOL"
ENV NEXT_PUBLIC_BACKEND_HOST "$NEXT_PUBLIC_BACKEND_HOST"
ENV NEXT_PUBLIC_BACKEND_HOST_BROWSER "$NEXT_PUBLIC_BACKEND_HOST_BROWSER"
ENV NEXT_PUBLIC_BACKEND_PORT "$NEXT_PUBLIC_BACKEND_PORT"
ENV BACKEND_API_TOKEN "$BACKEND_API_TOKEN"
ENV GA_ID "$GA_ID"
ENV GTM_ID "$GTM_ID"

WORKDIR /app
RUN npm ci
COPY . .
RUN npm run build
CMD npm run start

FROM base AS development
WORKDIR /app
RUN npm install 
COPY . .
CMD npm run dev